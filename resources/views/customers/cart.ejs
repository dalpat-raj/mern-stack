<section class="cart py-6">
<% if( typeof cart !== "undefined") { %>

        <div class="order container mx-auto xl:w-1/2 ">
            <div class="flex items-center border-b border-gray-300">
                <img src="/img/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
            <div class="flex items-center justify-between my-6 text-right font-bold ">
                <div class="flex-1 text-center">Item</div>
                <div class="flex-1">Quantity</div>
                <div class="flex-1">Remove</div>
                <div class="flex-1">Sub Total</div>
            </div>
            
            <% var total = 0 %>
            <% cart.forEach(function(product) { %>
                <% var sub = parseFloat(product.qty * product.price).toFixed(2) %>
                <% total += +sub %>
                
                <div class="pizza-list">
                <div class="flex items-center justify-between my-6">
                    <div class="flex">
                        <img class="w-24" src="/img/<%= product.image %>" alt="">  
                        <div class="">
                            <h1><%= product.title %></h1>
                            <span><%= product.size %></span>
                            <p>â‚¹<span class="amount"> <%= product.price %></span></p>
                        </div>
                    </div>
                    <div class="" >
                        <a href="/cart/update/<%= product.title %>?action=remove"><i class="far fa-minus-square"></i></a>&nbsp
                        <span><%= product.qty %></span>&nbsp
                        <a href="/cart/update/<%= product.title %>?action=add"><i class="far fa-plus-square"></i></a>
                    </div>
                    <div>
                        <a href="/cart/update/<%= product.title %>?action=clear"><i class="far fa-window-close"></i></a>
                    </div>
                    <div>
                        <span class="font-bold text-lg">â‚¹ <%= sub %></span>
                    </div>
                </div>
            </div>
            <% }) %>
            <hr>
            <div class="text-right py-4">
                <span class="text-lg font-bold">Total Amount:</span>
                <span id="totalamount" class="amount text-2xl font-bold ml-2">â‚¹ <%= total %> </span>
            </div>
            <% if(user) { %>
            <div class="text-right">
                <form action="/orders" method="post" id="payment-form">
                    <div class="relative w-1/3 ml-auto">
                        <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                            <option value="cod">Cash On Delivery</option>
                            <option value="card">Pay With Card</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                        </svg>
                        </div>
                    </div>
                    <div id="card-element" class="w-1/2 ml-auto mt-4">

                    </div>
                    <a href="/cart/clear" class="btn-primary px-6 py-2 rounded-full mr-10 text-white font-bold mt-6"> clear cart</a> 
                    <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" > Order Now</button> 
                </form>
            </div> 
            <% } else { %>
            <div class="text-right">
                <a href="/cart/clear" class="btn-primary px-6 py-2 rounded-full mr-10 text-white font-bold mt-6"> clear cart</a> 
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" >Login to continue</a>
            </div>
            <% } %>
        </div>
<% } else { %>
    <div class="empty-card">
        <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜œ</h1>
        <p class="text-gray-500 text-lg mb-12">You Probably haven't ordered a pizza yet.<br>
            To order a pizza, go to the main page.
        </p>
        <img class="w-1/4 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
        <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div> 
<% } %>
</section>






